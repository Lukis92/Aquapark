= simple_form_for([:backend, @work_schedule], as: :work_schedule, url: {action: "create"}) do |f|
  = errors_for(@work_schedule)
  .row
    .col-md-3
      = f.input :start_time
    .col-md-3
      = f.input :end_time
  = f.input :day_of_week, collection: WorkSchedule::DAYS, include_blank: 'Wybierz dzieÅ„ tygodnia'
  = f.input :person_id, label: "Pracownik", :collection => @employees.map{|e| [e.full_name, e.id]}, prompt: "Wybierz pracownika"
  = f.button :submit, class: "btn btn-primary"

:javascript
  $(document).ready(function () {
      $('select').material_select();
  });
