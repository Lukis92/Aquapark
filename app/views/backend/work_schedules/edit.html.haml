%h1 Edycja harmonogramu
= simple_form_for([:backend, @work_schedule], as: :work_schedule, url: {action: "update"}) do |f|
  = f.input :start_time
  = f.input :end_time
  = f.input :day_of_week, collection: WorkSchedule::DAYS
  = f.collection_select :person_id, @employee, :id, :fullName, {}, {class: "form-control"}

  = f.button :submit
