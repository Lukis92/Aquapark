%h3 Grafik pracy wszystkich pracowników

%table.table.table-striped.table-bordered.table-list.pretty
  %thead
    %tr
      %th
        %em.fa.fa-cog
        Zarządzanie
      %th
        = sortable "day_of_week", "Dzień tygodnia"
      %th
        = sortable "start_time", "Czas od"
      %th
        = sortable "end_time", "Czas do"
      %th
        Pracownik
      %th
        Rola
  %tbody
    - @work_schedules.each do |work|
      %tr
        %td
          = link_to edit_backend_work_schedule_path(work) do
            %i.btn.btn-default
              %i.fa.fa-pencil
          = link_to backend_work_schedule_path(work), method: :delete, data: {confirm: 'Jesteś pewny/a?'} do
            %i.btn.btn-danger
              %i.fa.fa-trash
        %td
          = work.day_of_week
        %td
          = work.start_time.strftime("%H:%M")
        %td
          = work.end_time.strftime("%H:%M")
        %td
          = work.person.try(:full_name) unless work.person.nil?
        %td
          - unless work.person.nil?
            - if work.person.type == "Manager"
              %i.btn.btn-danger
                = work.person.type
            - elsif work.person.type == "Client"
              %i.btn.btn-warning
                = work.person.type
            - else
              %i.btn.btn-info
                = work.person.type
    = will_paginate @work_schedules, renderer: BootstrapPagination::Rails
