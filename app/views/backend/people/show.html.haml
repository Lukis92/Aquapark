.panel.panel-info
  .panel-heading
    %h3.panel-title
      = @person.fullName
  .panel-body
    .row
      .col-md-3.col-lg-3{:align => "center"}
        %img.img-circle.img-responsive
          = image_tag @person.profile_image.url(:medium)
      /
        <div class="col-xs-10 col-sm-10 hidden-md hidden-lg"> <br>
        <dl>
        <dt>DEPARTMENT:</dt>
        <dd>Administrator</dd>
        <dt>HIRE DATE</dt>
        <dd>11/12/2013</dd>
        <dt>DATE OF BIRTH</dt>
        <dd>11/12/2013</dd>
        <dt>GENDER</dt>
        <dd>Male</dd>
        </dl>
        </div>
      .col-md-9.col-lg-9
        %table.table.table-user-information
          %tbody
            %tr
              %td Pesel:
              %td
                = @person.pesel
            %tr
              %td ImiÄ™:
              %td
                = @person.first_name
            %tr
              %td Nazwisko:
              %td
                = @person.last_name
            %tr
              %td Data urodzenia:
              %td
                = @person.date_of_birth
            %tr
              %td Email
              %td
                %a{:href => "mailto:#{@person.email}"}
                  = @person.email
            %tr
              %td Zarobki
              %td
                = @person.salary
            %td Data zatrudnienia:
            %td
              = @person.hiredate

        %a.btn.btn-primary{:href => "#"} My Sales Performance
        %a.btn.btn-primary{:href => "#"} Team Sales Performance
  .panel-footer
    %a.btn.btn-sm.btn-primary{"data-original-title" => "Broadcast Message", "data-toggle" => "tooltip", :type => "button"}
      %i.glyphicon.glyphicon-envelope
    %span.pull-right
      = link_to edit_backend_person_path(@person), class: "btn btn-sm btn-warning" do
        %i.fa.fa-pencil-square
        Edytuj
      %a.btn.btn-sm.btn-danger{"data-original-title" => "Remove this user", "data-toggle" => "tooltip", :type => "button"}
        %i.glyphicon.glyphicon-remove
