%h5 Cennik Treningów Indywidualnych

= link_to new_backend_training_cost_path, data: { no_turbolink: true } do
  %i.btn.btn-primary
    %i.fa.fa-plus
    Dodaj

%table.table.table-striped.table-bordered.table-list
  %thead
    %tr
      %th
        %em.fa.fa-cog
        Zarządzanie
      %th
        Czas trwania
      %th
        Koszt
  %tbody
    - @training_costs.each do |tc|
      %tr
        %td
          = link_to edit_backend_training_cost_path(tc), data: { no_turbolink: true } do
            %i.btn.btn-default
              %i.fa.fa-pencil
          = link_to backend_training_cost_path(tc), method: :delete, data: {confirm: 'Jesteś pewny/a?'} do
            %i.btn.btn-danger
              %i.fa.fa-trash
        %td
          = tc.duration
          min.
        %td
          = tc.cost
          zł

= will_paginate @training_costs, renderer: BootstrapPagination::Rails
