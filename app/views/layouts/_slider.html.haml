#carousel1.carousel.slide.center-block{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.0{"data-target" => "#carousel1", "data-slide-to" => "0"}
    %li{"data-target" => "#carousel1", "data-slide-to" => "1"}
    %li{"data-target" => "#carousel1", "data-slide-to" => "2"}
    %li{"data-target" => "#carousel1", "data-slide-to" => "3"}

  .carousel-inner
    .item.active
      %img{:src => "https://s3.amazonaws.com/aquapark-s9434/water-103817_1920.jpg"}
      .carousel-caption
        %h3 Witaj w naszym wodnym świecie!
        %p Czeka na Ciebie mnóstwo atrakcji!
    .item
      %img{:src => "https://s3.amazonaws.com/aquapark-s9434/interior_small.jpg"}
      .carousel-caption
        %h3 Strefa relaksu
        %p Odpręż się i odpocznij.
    .item
      %img{:src => "https://s3.amazonaws.com/aquapark-s9434/swimming-pool.jpg"}
      .carousel-caption
        %h3 Kompleks basenów
        %p Oferujemy szeroki wachlarz miejsc do pływania.
    .item
      %img{:src => "https://s3.amazonaws.com/aquapark-s9434/original_small.jpg"}
      .carousel-caption
        %h3 Niezapomniane chwile
        %p Z nami spełnisz swoje wodne aspiracje.
  %a.left.carousel-control{:href => "#carousel1", "data-slide" => "prev"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
  %a.right.carousel-control{:href => "#carousel1", "data-slide" => "next"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
