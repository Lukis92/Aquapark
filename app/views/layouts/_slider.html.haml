.container.divider
  #carousel1.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      %li{"data-target" => "#carousel1", "data-slide-to" => "0"}
      %li{"data-target" => "#carousel1", "data-slide-to" => "1"}
      %li{"data-target" => "#carousel1", "data-slide-to" => "2"}
      %li{"data-target" => "#carousel1", "data-slide-to" => "3"}

    .carousel-inner
      .item.active
        %img{:src => "http://www.mediafire.com/convkey/3629/jqsgcsawzs6864vzg.jpg"}
        .carousel-caption
          %h3 Witaj w naszym wodnym świecie!
          %p Czeka na Ciebie mnóstwo atrakcji!
      .item
        %img{:src => "http://www.mediafire.com/convkey/8dc6/w4wflhq8ksb68s5zg.jpg"}
        .carousel-caption
          %h3 Strefa relaksu
          %p Odpręż się i odpocznij.
      .item
        %img{:src => "http://www.mediafire.com/convkey/4109/jukpsw71c83g7t8zg.jpg"}
        .carousel-caption
          %h3 Kompleks basenów
          %p Oferujemy szeroki wachlarz miejsc do pływania.
      .item
        %img{:src => "http://www.mediafire.com/convkey/861c/0tvmumwxwgp1uijzg.jpg"}
        .carousel-caption
          %h3 Niezapomniane chwile
          %p Z nami spełnisz swoje wodne aspiracje.
    %a.left.carousel-control{"data-slide" => "prev", "data-target" => "#carousel1", :role => "button"}
      %span.fa.fa.fa-angle-left
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", "data-target" => "#carousel1", :role => "button"}
      %span.fa.fa.fa-angle-right
      %span.sr-only Next

