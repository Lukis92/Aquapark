#price.container.fix
  .row.text-center
    %h2.divider-new Cennik
    %h4 Wybierz interesujący Cię rodzaj wejściówki.
    .col-md-12
      #tab.btn-group{"data-toggle" => "buttons-radio"}
        %a.btn.btn-large.btn-success.btn-xlg{"data-toggle" => "tab", :href => "#tickets"}
          %i.fa.fa-ticket
          Bilety
          %a.btn.btn-large.btn-primary.btn-xlg{"data-toggle" => "tab", :href => "#passes"}
            %i.fa.fa-clipboard
            Karnety

      .tab-content
        #tickets.tab-pane
          %br
          #carousel-multi-item.carousel.slide.multiitem-car
            .text-center
              %a.btn-floating.btn-small.waves-effect.waves-light.grey.darken-4{"data-slide" => "prev", :href => "#carousel-multi-item", :role => "button"}
                %i.material-icons keyboard_arrow_left
              %a.btn-floating.btn-small.waves-effect.waves-light.grey.darken-4{"data-slide" => "next", :href => "#carousel-multi-item", :role => "button"}
                %i.material-icons keyboard_arrow_right
            / Indicators
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#carousel-multi-item"}
              %li{"data-slide-to" => "1", "data-target" => "#carousel-multi-item"}
              %li{"data-slide-to" => "2", "data-target" => "#carousel-multi-item"}
            / Wrapper for slides
            .carousel-inner
              - groups = @tickets.in_groups_of(3, false)
              - groups.each_with_index do |group, i|
                - if i == 0
                  .item.active
                    .row.text-center
                      - group.each do |field|
                        .col-sm-4.item-card
                          .pricing-card.text-center.z-depth-1.hoverable
                            .success-color-dark.z-depth-1
                              %p.no-margin.white-text.extra-padding-05
                                = field.kind
                            / Price
                            .card-up.success-color
                              %h6 Wejście
                              %h1
                                = field.price
                                ZŁ
                            .card-content
                              %ul.features-list
                                %li
                                  %p
                                    %i.fa.fa-check.green-text
                                    = field.kind_details
                                %li
                                  %p
                                    %i.fa.fa-check.green-text
                                    = field.description
                                %li
                                  %p
                                    %i.fa.fa-times.green-text
                                    Darmowy zestaw ręczników
                                %li
                                  %p
                                    %i.fa.fa-times.red-text
                                    Płatna sauna
                                %li
                                  %p
                                    %i.fa.fa-times.red-text
                                    Brak dostępu do jacuzii
                              %hr
                                / CTA
                                = link_to new_backend_entry_type_bought_detail_path(field) do
                                  .btn.btn-danger.btn-etc.waves-effect.waves-light
                                    .fa.fa-shopping-cart
                                    Kup teraz
                - else
                  .item
                    .row.text-center
                      - group.each do |field|
                        .col-sm-4.item-card
